
profiles {

    local {
        process {
            executor = 'local'
            memory = '2GB'
            cpus = 1
        }
        process.withName('get_phenologs_data') {
            memory = '16GB'
        }
        process.withName('compute_fdr_data') {
            memory = '64GB'
            cpus = 10
        }
        process.withName('compute_real_phenolog_data') {
            memory = '64GB'
            cpus = 10
        }
        process.withName('compute_fdr_info') {
            memory = '8GB'
        }
        process.withName('ortholog_rank_calcs') {
            memory = '8GB'
        }
        process.withName('leave_one_out_calculations') {
            memory = '64GB'
            cpus = 10
        }
        process.withName('leave_one_out_ortholog_rank_calcs') {
            memory = '64GB'
            cpus = 10
        }
    }

    slurm {
        process {
        executor = 'slurm'
        memory = '2GB'
        queue = 'general'
        cpus = 1
        time = '30m'
        }

        process.withName('get_phenologs_data') {
            memory = '16GB'
        }
        process.withName('compute_fdr_data') {
            memory = '64GB'
            cpus = 10
            time = '8h'
        }
        process.withName('compute_real_phenolog_data') {
            memory = '64GB'
            cpus = 10
            time = '4h'
        }
        process.withName('compute_fdr_info') {
            memory = '12GB'
        }
        process.withName('ortholog_rank_calcs') {
            memory = '12GB'
        }
        process.withName('leave_one_out_calculations') {
            memory = '64GB'
            cpus = 10
            time = '12h'
        }
        process.withName('leave_one_out_ortholog_rank_calcs') {
            memory = '64GB'
            cpus = 10
        }
    }
}